<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fragframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        />
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_black"
        android:text="@string/app_name"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/cardCoS"
        android:elevation="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="?attr/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <EditText
            android:id="@+id/etform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:maxHeight="100dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:hint="@string/COS"
            android:fontFamily="@font/roboto_thin"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HOWTS"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/tvhow"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/cardCoS"
        app:layout_constraintTop_toBottomOf="@id/cardCoS"/>

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvhow"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radiotip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/amazing"
            />
        <RadioButton
            android:id="@+id/radiotip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/good"
            />
        <RadioButton
            android:id="@+id/radiotip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/ok"
            />
    </RadioGroup>



    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:switchPadding="170dp"
        android:text="@string/roundup"
        android:fontFamily="@font/roboto_thin"
        app:layout_constraintStart_toStartOf="@id/radio"
        app:layout_constraintTop_toBottomOf="@id/radio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:id="@+id/btncal"
        android:text="@string/calculate"
        android:paddingStart="115dp"
        android:paddingEnd="115dp"
        app:layout_constraintEnd_toEndOf="@id/switchround"
        app:layout_constraintStart_toStartOf="@id/switchround"
        app:layout_constraintTop_toBottomOf="@id/switchround" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:id="@+id/btncalfrag"
        android:text="@string/calculatefrag"
        android:paddingStart="115dp"
        android:paddingEnd="115dp"
        app:layout_constraintEnd_toEndOf="@id/switchtheme"
        app:layout_constraintStart_toStartOf="@id/switchtheme"
        app:layout_constraintTop_toBottomOf="@id/switchtheme" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvamount"
        android:text="@string/tipam"
        android:fontFamily="@font/roboto_thin"
        app:layout_constraintEnd_toEndOf="@id/btncal"
        app:layout_constraintTop_toBottomOf="@id/btncal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img"
        app:layout_constraintStart_toStartOf="@id/switchround"
        app:layout_constraintEnd_toEndOf="@id/switchround"
        app:layout_constraintTop_toBottomOf="@id/tvamount"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_foreground"
            android:elevation="10dp"/>
        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="?attr/image"
            tools:src="?attr/image"
            android:scaleType="center"
            android:adjustViewBounds="true"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchtheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:switchPadding="170dp"
        android:text="@string/nighttheme"
        android:fontFamily="@font/roboto_thin"
        app:layout_constraintStart_toStartOf="@id/switchround"
        app:layout_constraintEnd_toEndOf="@id/switchround"
        app:layout_constraintTop_toBottomOf="@id/img" />





</androidx.constraintlayout.widget.ConstraintLayout>